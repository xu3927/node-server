// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.163.1/containers/javascript-node
{
	"name": "Node Server",
	"image": "node-env",
	// "build": {
	// 	"dockerfile": "Dockerfile",
	// 	// Update 'VARIANT' to pick a Node version: 10, 12, 14
	// 	"args": {
	// 		"VARIANT": "14"
	// 	}
	// },
	// Set *default* container specific settings.json values on container create.
	"containerEnv": {},
	"remoteEnv": {},
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"dbaeumer.vscode-eslint"
	],
	"workspaceFolder": "/home/node/workspace",
	// "workspaceMount": "type=bind,src=/root/data/node-server,dst=/home/node/workspace",
	"workspaceMount": "source=/root/data/node-server,target=/home/node/workspace,type=bind,consistency=cached",
		// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",
	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}